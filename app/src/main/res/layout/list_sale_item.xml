<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/SaleTable.ListHeader"
    >

    <TextView
        android:id="@+id/sale_item_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="left"
        style="@style/SaleTable.ListHeader.Text"
        />


    <TextView
        android:id="@+id/sale_item_standard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/SaleTable.ListHeader.Text"
        />

    <TextView
        android:id="@+id/sale_item_util"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/SaleTable.ListHeader.Text"
        />

    <TextView
        android:id="@+id/sale_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/SaleTable.ListHeader.Text"
        />


    <TextView
        android:id="@+id/sale_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/SaleTable.ListHeader.Text"
        />


    <TextView
        android:id="@+id/sale_item_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/SaleTable.ListHeader.Text"
        />


</LinearLayout>